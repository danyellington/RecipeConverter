<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.recipeconverter.ui.CalculateActivity"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/add"
            android:text="Add New Item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="addItems"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/quantity"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:hint="amount"
        android:inputType="phone"
        android:textColor="@color/MidnightBlue"
        android:textColorHint="@color/DimGray" />

    <EditText
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calculateAmount"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Ingredient"
        android:inputType="text"
        android:textColor="@color/MidnightBlue"
        android:textColorHint="@color/DimGray" />

    <EditText
        android:id="@+id/calculateAmount"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/divButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="servings"
        android:inputType="phone"
        android:textColor="@color/MidnightBlue"
        android:textColorHint="@color/DimGray" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/divButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.65"
        android:background="@color/DimGray"
        android:padding="10dp"
        android:text="Multiply"
        android:textColor="@color/colorTextIcons" />


